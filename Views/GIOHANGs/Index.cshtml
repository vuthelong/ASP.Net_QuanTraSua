@model IEnumerable<ASP.NET_QuanTraSua.Models.GIOHANG>

@{
    ViewBag.Title = "Index";
}
<style>
    table {
        padding: 0px 100px 0px 100px;
    }
</style>
<h2 align="center">Giỏ hàng</h2><br />
<table class="table">
    <tr style="text-align:center">
        <td><input type="checkbox" /></td>
        <td>Sản phẩm</td>
        <td>Đơn giá</td>
        <td>Số lượng</td>
        <td>Số tiền</td>
        <td>Thao tác</td>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DONHANG.PhuongThucThanhToan)
            </td>
            <td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.MaGH })
            </td>
        </tr>
        <tr>
            <td style="text-align:center"><input type="checkbox" /></td>
            <td>@Html.DisplayFor(modelItem => item.DONHANG.MaDH)</td>
            <td style="text-align:center">400000</td>
            <td style="text-align:center"><button>-</button> 2 <button>+</button></td>
            <td style="text-align:center">800000</td>
            <td style="text-align:center"><a href="#">Xóa</a><br /><a href="#">Mua tiếp</a></td>
        </tr>
    }

</table><br />
<p style="float:right">@Html.ActionLink("Đặt hàng", "Dathang")</p>
<br /><br />
